@{
  Layout = "_Layout";
  ViewBag.Title = "All Flavors";
}

@using TreatTracker.Models;
@model List<TreatTracker.Models.Flavor>;

<h1>Flavors for @User.Identity.Name</h1>

@if (@Model.Any())
{
  @foreach (Flavor flavor in Model)
  {
    <p>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId }) </p>
  }
}
else
{
  <h3>No flavors have been added yet.</h3>
  <h3>Click on "Add New Flavor" below to get started!</h3>
}



<p>@Html.ActionLink("Add New Flavor", "Create")</p>
<p>@Html.ActionLink("Back To Home", "Index", "Home")</p>